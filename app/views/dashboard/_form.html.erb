<%= form_with(model: appointment, scope: :appointment, url: appointments_path) do |f| %>
  <div class="space-y-4">
    <div>
      <%= f.label :name, class: "block font-medium text-gray-700 dark:text-gray-300" %>
      <%= f.text_field :name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm", placeholder: "Enter your name", required: true %>
      <% if appointment.errors.messages[:name].any? %>
        <div class="text-red-500 text-sm mt-1">
          <% appointment.errors.full_messages_for(:name).each do |message| %>
            <p><%= message %></p>
          <% end %>
        </div>
      <% end %>
    </div>

    <div class="mb-4">
      <%= f.label :reason, class: "block font-medium text-gray-700 dark:text-gray-300" %>
      <%= f.text_field :reason, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm", placeholder: "Enter your reason", required: true %>
      <% if appointment.errors.messages[:reason].any? %>
        <div class="text-red-500 text-sm mt-1">
          <% appointment.errors.full_messages_for(:reason).each do |message| %>
            <p><%= message %></p>
          <% end %>
        </div>
      <% end %>
    </div>

    <div class="mb-4">
      <%= f.label :date, class: "block font-medium text-gray-700 dark:text-gray-300" %>
      <%= f.date_field :date, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm", required: true %>
      <% if appointment.errors.messages[:date].any? %>
        <div class="text-red-500 text-sm mt-1">
          <% appointment.errors.full_messages_for(:date).each do |message| %>
            <p><%= message %></p>
          <% end %>
        </div>
      <% end %>
    </div>

    <div class="mb-4">
      <%= f.label :time, class: "block font-medium text-gray-700 dark:text-gray-300" %>
      <%= f.time_field :time, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm", required: true %>
      <% if appointment.errors.messages[:time].any? %>
        <div class="text-red-500 text-sm mt-1">
          <% appointment.errors.full_messages_for(:time).each do |message| %>
            <p><%= message %></p>
          <% end %>
        </div>
      <% end %>
    </div>

    <div class="flex justify-end">
      <%= f.submit "Schedule", class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
    </div>
  </div>
<% end %>
