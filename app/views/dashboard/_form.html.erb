<%= form_with(model: appointment, scope: :appointment, url: appointments_path) do |f| %>
  <div class="mb-4">
    <%= f.label :name, class: "block text-gray-700 font-semibold" %>
    <%= f.text_field :name, class: "form-input mt-1 block w-full", placeholder: "Enter your name", required: true %>
    <% if appointment.errors.messages[:name].any? %>
      <div class="text-red-500 text-sm mt-1">
        <% appointment.errors.full_messages_for(:name).each do |message| %>
          <p><%= message %></p>
        <% end %>
      </div>
    <% end %>
  </div>

  <div class="mb-4">
    <%= f.label :reason, class: "block text-gray-700 font-semibold" %>
    <%= f.text_field :reason, class: "form-input mt-1 block w-full", placeholder: "Enter your reason", required: true %>
    <% if appointment.errors.messages[:reason].any? %>
      <div class="text-red-500 text-sm mt-1">
        <% appointment.errors.full_messages_for(:reason).each do |message| %>
          <p><%= message %></p>
        <% end %>
      </div>
    <% end %>
  </div>

  <div class="mb-4">
    <%= f.label :date, class: "block text-gray-700 font-semibold" %>
    <%= f.date_field :date, class: "form-input mt-1 block w-full", required: true %>
    <% if appointment.errors.messages[:date].any? %>
      <div class="text-red-500 text-sm mt-1">
        <% appointment.errors.full_messages_for(:date).each do |message| %>
          <p><%= message %></p>
        <% end %>
      </div>
    <% end %>
  </div>

  <div class="mb-4">
    <%= f.label :time, class: "block text-gray-700 font-semibold" %>
    <%= f.time_field :time, class: "form-input mt-1 block w-full", required: true %>
    <% if appointment.errors.messages[:time].any? %>
      <div class="text-red-500 text-sm mt-1">
        <% appointment.errors.full_messages_for(:time).each do |message| %>
          <p><%= message %></p>
        <% end %>
      </div>
    <% end %>
  </div>

  <div class="text-center">
    <%= f.submit "Schedule", class: "bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 px-4 rounded-full" %>
  </div>
<% end %>
